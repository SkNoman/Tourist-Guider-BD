<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentSplash">

    <fragment
        android:id="@+id/fragmentSplash"
        android:name="com.example.crud.ui.splash.FragmentSplash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/fragmentDashboard"
        android:name="com.example.crud.ui.dashboard.FragmentDashboard"
        android:label="fragment_user_dashboard"
        tools:layout="@layout/fragment_user_dashboard" >
        <action
            android:id="@+id/action_fragmentDashboard_to_dhakaFragment"
            app:destination="@id/dhakaFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_right_to_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_left_to_right" />
        <action
            android:id="@+id/action_fragmentDashboard_to_chittagongFragment"
            app:destination="@id/chittagongFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_right_to_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_left_to_right" />
    </fragment>
    <fragment
        android:id="@+id/dhakaFragment"
        android:name="com.example.crud.ui.divisions.DhakaFragment"
        android:label="fragment_dhaka"
        tools:layout="@layout/fragment_dhaka" />
    <fragment
        android:id="@+id/chittagongFragment"
        android:name="com.example.crud.ui.divisions.ChittagongFragment"
        android:label="fragment_chittagong"
        tools:layout="@layout/fragment_chittagong" />
</navigation>